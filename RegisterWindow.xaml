<Window x:Class="BankingSystemGui.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Register" Height="300" Width="400"
    Background="#045e78">

    <Grid>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="280">

            <TextBlock
                Text="Create a New Account"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"/>

            <TextBlock
                Text="Username:"
                Foreground="White"
                FontWeight="SemiBold"
                Margin="0,0,0,5"/>

            <TextBox
                Name="UsernameTextBox"
                Height="30"
                Margin="0,0,0,15"/>

            <TextBlock
                Text="Password:"
                Foreground="White"
                FontWeight="SemiBold"
                Margin="0,0,0,5"/>

            <PasswordBox
                Name="PasswordBox"
                Height="30"
                Margin="0,0,0,25"/>

            <Button
                Content="Register"
                Width="100"
                Height="35"
                FontWeight="Bold"
                Background="#00abab"
                Foreground="White"
                HorizontalAlignment="Center"
                Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
