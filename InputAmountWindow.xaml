<Window x:Class="BankingSystemGui.InputAmountWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Amount" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="PromptText" Text="Enter amount in Euros:" Margin="0,0,0,10"/>
            <TextBox x:Name="AmountTextBox" Margin="0,0,0,10" Width="150"/>
            <Button Content="Confirm" Width="80" HorizontalAlignment="Right" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>